@model List<VentaDeMiel2022.Entidades.Entidades.Pais>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<ol class="breadcrumb mt-4 mb-4 ">
    
</ol>
<div class="card">
    <h5 class="card-header bg-primary text-white">
        Listado de Paises

    </h5>

    <div class="card-body">
        <a href="@Url.Action("Create","Pais")" class="btn btn-primary">Crear Nueva</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Categoría</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td>
                            No hay registros todavía
                        </td>
                    </tr>
                 }
                else
                {
                    foreach (var pais in Model)
                    {
                        <tr >
                            <td>@Html.DisplayFor(modelItem => pais.NombrePais)</td>

                            <td >
                                
                                @Html.ActionLink("Editar", "Edit", new { id = pais.PaisId }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Borrar", "Delete", new { id = pais.PaisId }, new { @class = "btn btn-danger" })

                            </td>
                        </tr>
                   }
                }
            </tbody>
        </table>

    </div>
    <div class="card-footer text-muted">
        Cantidad de registros: <strong>@Model.Count</strong>
    </div>
</div>
